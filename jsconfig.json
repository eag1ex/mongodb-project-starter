{
    "compileOnSave": false,
    "compilerOptions": {
        "emitDeclarationOnly":true,
        "typeRoots": [
          "./types"
        ],
        "declaration": true,
        "checkJs": true,
        "noImplicitAny":false,
        "moduleResolution": "node",
        "module": "commonJS",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
    },
    "include": [
        "libs"
    ],
    "exclude": [
        "node_modules",
        "tmp"
    ],
    "lib": [
        "es2018",
        "dom"
      ]
}


